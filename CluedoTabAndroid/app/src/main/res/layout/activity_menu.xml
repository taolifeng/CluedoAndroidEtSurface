<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_weight="0.13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="212dp"
            android:layout_margin="5dp"
            android:layout_height="105dp"
            android:contentDescription=""
            android:src="@drawable/picture_profil" />

        <TextView
            android:id="@+id/pseudoText"
            android:text="@string/pseudo"
            android:layout_weight="0.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/persoText"
            android:text="perso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button_connect"
        android:orientation="horizontal"
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"

        >
        <Button
            android:id="@+id/rollDice_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Lancer les dÃ©s"
            android:textSize="20sp"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/connection_button" />
    </LinearLayout>

</LinearLayout>
