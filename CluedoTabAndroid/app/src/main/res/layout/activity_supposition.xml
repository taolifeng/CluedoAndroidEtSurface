<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.polytech.cluedo.SuppositionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutGlobal2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <include layout="@layout/bandeau_layout"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/relatLayGlobal">

            <include layout="@layout/background_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"><LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            ><RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/card_layout">
                            <ImageView
                                    android:id="@+id/Rose"
                                    android:layout_width="match_parent"
                                    android:layout_margin="5dp"
                                    android:layout_height="match_parent"
                                    android:contentDescription=""
                                    android:src="@drawable/rose" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardPervLayout">
                                <ImageView
                                    android:id="@+id/Pervenche"
                                    android:layout_width="match_parent"
                                    android:layout_margin="5dp"
                                    android:layout_height="match_parent"
                                    android:contentDescription=""
                                    android:src="@drawable/pervenche" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardLebLayout">
                                <ImageView
                                        android:id="@+id/Leblanc"
                                        android:layout_width="match_parent"
                                        android:layout_margin="5dp"
                                        android:layout_height="match_parent"
                                        android:contentDescription=""
                                        android:src="@drawable/leblanc" />
                                    </RelativeLayout>

                        </LinearLayout></RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"><LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            ><RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/cardOliveLayout"><ImageView
                            android:id="@+id/Olive"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent"
                            android:contentDescription=""
                            android:src="@drawable/olive" /></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardVioletLayout"><ImageView
                                android:id="@+id/Violet"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="match_parent"
                                android:contentDescription=""
                                android:src="@drawable/violet" /></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardMoutardeLayout"><ImageView
                                android:id="@+id/Moutarde"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="match_parent"
                                android:contentDescription=""
                                android:src="@drawable/moutarde" /></RelativeLayout>

                        </LinearLayout></RelativeLayout>
                        </LinearLayout></RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"><LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            ><RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/cardCordeLayout"><ImageView
                            android:id="@+id/Corde"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent"
                            android:contentDescription=""
                            android:src="@drawable/corde" /></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardRevolverLayout"><ImageView
                                android:id="@+id/Revolver"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="match_parent"
                                android:contentDescription=""
                                android:src="@drawable/revolver" /></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardBarredeferLayout"><ImageView
                                android:id="@+id/Barredefer"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="match_parent"
                                android:contentDescription=""
                                android:src="@drawable/barredefer" /></RelativeLayout>

                        </LinearLayout></RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"><LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            ><RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/cardChandelierLayout"><ImageView
                            android:id="@+id/Chandelier"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent"
                            android:contentDescription=""
                            android:src="@drawable/chandelier" /></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardPoignardLayout"><ImageView
                                android:id="@+id/Poignard"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="match_parent"
                                android:contentDescription=""
                                android:src="@drawable/poignard" /></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/cardCleAnglaiseLayout"><ImageView
                                android:id="@+id/Cleanglaise"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_height="match_parent"
                                android:contentDescription=""
                                android:src="@drawable/cleanglaise" /></RelativeLayout>

                        </LinearLayout></RelativeLayout>
                    </LinearLayout></RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/cardFuturePerso">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/person"
                                android:id="@+id/textSuspect"/>
                            </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/cardFutureArme">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/arm"
                                android:id="@+id/textArme"/>
                            </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/cardFuturePiece"/>
                            </RelativeLayout>
                    </LinearLayout>
                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Salle A Manger"
                        android:id="@+id/textSuppos"/>-->
                    </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                    android:id="@+id/ok_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Valider ma supposition"
                    android:textSize="15sp"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/connection_button"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true" /></RelativeLayout>
                </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
